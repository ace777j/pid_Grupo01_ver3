@model IEnumerable<ProyectoDSWI.Entity.Departamento1>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">MAESTRO DE DEPARTAMENTOS</h2>

<p>
    @Html.ActionLink("Agregar Nuevo ", "Create", null, new { @class = "btn btn-success" })
</p>
<p>
    <a href="@Url.Action( "Index", "TipoDepartamento")">Ver Tipos de Departamentos</a>
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>CÃ³digo</th>
        <th>Piso</th>
        <th>Fecha de Registro</th>
        <th>Usuario</th>
        <th>Estado</th>
        <th>Tipo</th>
        <th style="text-align:center">Mantenimiento</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr style="background-color:white">
        <td>
            @Html.DisplayFor(modelItem => item.idDepa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nroPiso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaRegistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.usuReg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idEstado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idTipo)
        </td>
        <td>
            <button class="btn btn-warning btn-sm" type="button" id="btn_act" onclick="location.href='Departamento/Edit?id=@item.idDepa'"><span class="glyphicon glyphicon-edit">Actualiza</span></button>
            <button class="btn btn-danger btn-sm" type="button" id="btn_act" onclick="location.href='Departamento/Delete?id=@item.idDepa'"><span class="glyphicon glyphicon-trash">Elimina</span></button>
        </td>
    </tr>
    }

</table>

