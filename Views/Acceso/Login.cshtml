
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayaoutLogin.cshtml";
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first" style="background-color: #FFFFFF; height: 270px; width: 400px; padding: 00px 00px 00px 00px; margin: 200px auto; border-radius: 10px 10px 15px 15px; ">
            <div class="fadeIn first" style="background-color: #0B56BF; height: 40px; border-radius: 10px 10px 0px 0px;">
                <h2 style="text-align: center; color: white; ">LOGIN</h2>
            </div>
            <!-- Login Form -->

            <form action="@Url.Content("~/Acceso/Login")" method="post" style="text-align: -webkit-center; padding: 20px 50px 50px 40px; ">

                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input type="email" id="User" class="fadeIn second form-control" name="User" placeholder="login" required>
                </div>
                <br>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" id="Pass" class="fadeIn third form-control" name="Pass" placeholder="password" required>
                </div>
                <br>
                <button class="btn btn-lg btn-primary btn-block btn-signin" id="IngresoLog" type="submit">Entrar</button>
            </form>

        </div>
        <!-- Remind Passowrd -->
    </div>
</div>

