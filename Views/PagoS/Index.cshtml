@model IEnumerable<ProyectoDSWI.Entity.PagoS1>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">PAGO DE SERVICIO</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Pago", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>Código</th>
        <th>Propietario</th>
        <th>Tipo Servicio</th>
        <th>Precio</th>
        <th>Fecha de Pago</th>
        <th style="text-align:center">Pago Servicio</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:white">
            <td>
                @Html.DisplayFor(modelItem => item.idPagoS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.propietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servicio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.fechaPago)
            </td>

            <td>
                <button class="btn btn-warning btn-sm" type="button" id="btn_act" onclick="location.href='PagoS/Edit?id=@item.idPagoS'"><span class="glyphicon glyphicon-edit">Actualiza</span></button>
                <button class="btn btn-danger btn-sm" type="button" id="btn_act" onclick="location.href='PagoS/Delete?id=@item.idPagoS'"><span class="glyphicon glyphicon-trash">Elimina</span></button>
            </td>
        </tr>
    }

</table>