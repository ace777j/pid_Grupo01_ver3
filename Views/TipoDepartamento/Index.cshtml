@model IEnumerable<ProyectoDSWI.Entity.TipoDepartamento1>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">TIPOS DE DEPARTAMENTOS</h2>

<p>
    <a href="@Url.Action( "Index", "Departamento")">Ver Listado de Departamentos</a>
</p>

<table class="table">
    <tr>
        <th>Código</th>
        <th>Descripcion</th>
        <th>Dormitorios</th>
        <th>Baños</th>
        <th>Área</th>
        <th>Precio</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idTipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nroDormitorios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nroBanos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.areaDepar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precMens)
        </td>
    </tr>
}

</table>
